  </div>

  <script>
    function openSizeChart() {
      document.getElementById('sizeChartModal').classList.add('active');
      document.body.style.overflow = 'hidden';
    }
    
    function closeSizeChart() {
      document.getElementById('sizeChartModal').classList.remove('active');
      document.body.style.overflow = '';
    }
    
    function closeSizeChartOnOutside(event) {
      if (event.target.id === 'sizeChartModal') {
        closeSizeChart();
      }
    }
    
    function switchCollection(collection) {
      const buttons = document.querySelectorAll('.collection-btn');
      const contents = document.querySelectorAll('.collection-content');
      
      buttons.forEach(btn => btn.classList.remove('active'));
      contents.forEach(content => content.classList.remove('active'));
      
      if (collection === 'essentials') {
        buttons[0].classList.add('active');
        document.getElementById('essentials-content').classList.add('active');
      } else if (collection === 'winter') {
        buttons[1].classList.add('active');
        document.getElementById('winter-content').classList.add('active');
      }
    }
    
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        closeSizeChart();
      }
    });
  </script>
</body>
</html>