{% doc %}
  @prompt
    This layout uses a clean, two-column table style design. Left side shows section titles like Description, Details, Wash Care, and Shipping. Right side contains clear, structured content. Minimal borders, uppercase headings, consistent spacing, and readable typography enhance clarity, professionalism, and easy scanning for users. the colors should be customizable , in mobile version it should be in This layout uses a clean, two-column table style design, i don't need any divider between Row
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-info-table-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
  }

  .ai-product-info-table__row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {{ block.settings.label_width }}% 1fr;
    gap: {{ block.settings.column_gap }}px;
    padding: {{ block.settings.row_padding }}px 0;
  }

  .ai-product-info-table__label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: {{ block.settings.label_font_weight }};
    text-transform: {{ block.settings.label_text_transform }};
    letter-spacing: {{ block.settings.label_letter_spacing }}px;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} {
    color: {{ block.settings.content_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: {{ block.settings.content_line_height }};
  }

  .ai-product-info-table__content-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} ul,
  .ai-product-info-table__content-{{ ai_gen_id }} ol {
    margin: 0;
    padding-left: 20px;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} li {
    margin-bottom: {{ block.settings.list_item_spacing }}px;
  }

  .ai-product-info-table__content-{{ ai_gen_id }} li:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-info-table__row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
      padding: {{ block.settings.mobile_row_padding }}px 0;
    }

    .ai-product-info-table__label-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_label_font_size }}px;
    }

    .ai-product-info-table__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_content_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-product-info-table-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_row_1 %}
    <div class="ai-product-info-table__row-{{ ai_gen_id }}">
      <div class="ai-product-info-table__label-{{ ai_gen_id }}">
        {{ block.settings.row_1_label }}
      </div>
      <div class="ai-product-info-table__content-{{ ai_gen_id }}">
        {{ block.settings.row_1_content }}
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_row_2 %}
