{% doc %}
  @prompt
    Design a modern, minimal e-commerce website section for a clothing brand showcasing the latest drop. Use a clean 2x2 grid layout with large, high-quality product images on black, white, and red backgrounds. Each card should include the product name in bold uppercase text, a short description, and price in smaller text below. Add a simple, centered section title ‘LATEST DROP’ at the top with clean sans-serif typography. Place a rectangular ‘DISCOVER MORE’ button in the top-right corner for navigation. Maintain even spacing, balanced margins, and visual hierarchy. Use neutral tones, soft shadows, and a minimalist aesthetic focused on premium fashion.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-latest-drop-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.section_bg_color }};
  }

  .ai-latest-drop-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-latest-drop-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 50px;
  }

  .ai-latest-drop-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.title_size }}px;
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    text-transform: uppercase;
    margin: 0;
    color: {{ block.settings.title_color }};
  }

  .ai-latest-drop-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    text-transform: uppercase;
    font-size: {{ block.settings.button_font_size }}px;
    letter-spacing: 1px;
    border: 1px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .ai-latest-drop-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-latest-drop-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-latest-drop-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    background-color: {{ block.settings.card_bg_color }};
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-latest-drop-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px {{ block.settings.card_shadow_color }};
  }

  .ai-latest-drop-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
  }

  .ai-latest-drop-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-latest-drop-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-latest-drop-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-latest-drop-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-latest-drop-product-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_title_font.family }}, {{ block.settings.product_title_font.fallback_families }};
    font-weight: {{ block.settings.product_title_font.weight }};
    font-style: {{ block.settings.product_title_font.style }};
    font-size: {{ block.settings.product_title_size }}px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0 0 8px 0;
    color: {{ block.settings.product_title_color }};
  }

  .ai-latest-drop-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin: 0 0 12px 0;
    color: {{ block.settings.description_color }};
  }

  .ai-latest-drop-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-latest-drop-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-latest-drop-header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
      margin-bottom: 30px;
    }

    .ai-latest-drop-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-latest-drop-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-latest-drop-button-{{ ai_gen_id }} {
      width: 100%;
      text-align: center;
    }
  }
{% endstyle %}

<div class="ai-latest-drop-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-latest-drop-container-{{ ai_gen_id }}">
    <div class="ai-latest-drop-header-{{ ai_gen_id }}">
      {% if block.settings.section_title != blank %}
        <h2 class="ai-latest-drop-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      {% endif %}
      {% if block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-latest-drop-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-latest-drop-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}
        
        <div class="ai-latest-drop-card-{{ ai_gen_id }}">
          <div class="ai-latest-drop-image-wrapper-{{ ai_gen_id }}">
            {% if product != blank and product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 800 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-latest-drop-image-{{ ai_gen_id }}"
                loading="lazy"
                width="800"
                height="{{ 800 | divided_by: product.featured_image.aspect_ratio | round }}"
              >
            {% else %}
              <div class="ai-latest-drop-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          
          <div class="ai-latest-drop-content-{{ ai_gen_id }}">
            {% if product != blank %}
              <h3 class="ai-latest-drop-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              {% if product.description != blank %}
                <p class="ai-latest-drop-product-description-{{ ai_gen_id }}">
                  {{ product.description | strip_html | truncate: 80 }}
                </p>
              {% endif %}
              <div class="ai-latest-drop-product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>
            {% else %}
              <h3 class="ai-latest-drop-product-title-{{ ai_gen_id }}">Product Name</h3>
              <p class="ai-latest-drop-product-description-{{ ai_gen_id }}">
                Add a product to display its details here
              </p>
              <div class="ai-latest-drop-product-price-{{ ai_gen_id }}">$0.00</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

