    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-category-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-category-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-category-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
  }

  .ai-category-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-category-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-category-slider-{{ ai_gen_id }} {
    display: none;
    position: relative;
  }

  .ai-category-slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.grid_gap }}px;
    overflow: hidden;
    scroll-behavior: smooth;
  }

  .ai-category-slider-item-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.desktop_columns | minus: 1 }} * {{ block.settings.grid_gap }}px)) / {{ block.settings.desktop_columns }});
    min-width: 0;
  }

  .ai-category-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: all 0.3s ease;
    background-color: {{ block.settings.card_background }};
  }

  .ai-category-card-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.hover_border_color }};
    transform: translateY(-4px);
  }

  .ai-category-card-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .ai-category-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio | times: 100 }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-category-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-category-card-{{ ai_gen_id }}:hover .ai-category-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-category-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-category-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
  }

  .ai-category-content-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity }}), transparent);
    z-index: 2;
  }

  .ai-category-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_name_size }}px;
    color: {{ block.settings.category_name_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-category-name-overlay-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_name_size }}px;
    color: {{ block.settings.overlay_text_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-category-arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .ai-category-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
    transform: translateY(-50%) scale(1.1);
  }

  .ai-category-arrow-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-category-arrow-{{ ai_gen_id }}:disabled:hover {
    transform: translateY(-50%) scale(1);
  }

  .ai-category-arrow-prev-{{ ai_gen_id }} {
    left: -20px;
  }

  .ai-category-arrow-next-{{ ai_gen_id }} {
    right: -20px;
  }

