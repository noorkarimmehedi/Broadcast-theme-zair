<script>
  (function() {
    class CategorySlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-category-slider-track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-category-arrow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-category-arrow-next-{{ ai_gen_id }}');
        this.currentIndex = 0;
        this.itemsPerView = {{ block.settings.desktop_columns }};
        this.totalItems = 9;
      }

      connectedCallback() {
        this.setupEventListeners();
        this.updateButtons();
        window.addEventListener('resize', () => this.updateButtons());
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.slide('prev'));
        this.nextButton.addEventListener('click', () => this.slide('next'));

        document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') {
            this.slide('prev');
          } else if (e.key === 'ArrowRight') {
            this.slide('next');
          }
        });
      }

      slide(direction) {
        const maxIndex = Math.max(0, this.totalItems - this.itemsPerView);

        if (direction === 'next' && this.currentIndex < maxIndex) {
          this.currentIndex++;
        } else if (direction === 'prev' && this.currentIndex > 0) {
          this.currentIndex--;
        }

        const items = this.track.querySelectorAll('.ai-category-slider-item-{{ ai_gen_id }}');
        if (items.length > 0) {
          const itemWidth = items[0].offsetWidth;
          const gap = {{ block.settings.grid_gap }};
          const offset = -(this.currentIndex * (itemWidth + gap));
          this.track.style.transform = `translateX(${offset}px)`;
        }

        this.updateButtons();
      }

      updateButtons() {
        const maxIndex = Math.max(0, this.totalItems - this.itemsPerView);
        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= maxIndex;
      }
    }

    customElements.define('category-slider-{{ ai_gen_id }}', CategorySlider{{ ai_gen_id }});
  })();
</script>

