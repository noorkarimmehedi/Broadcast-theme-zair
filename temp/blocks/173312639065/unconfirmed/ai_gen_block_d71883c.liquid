{% doc %}
  @prompt
    "Create a responsive promotional benefits section with three columns, each featuring an icon and text. The layout should include:
    
    First column: Delivery truck icon with a heart, heading 'Free Shipping on Orders $15+'
    Second column: Money bag icon with dollar sign and crown, heading 'Sign Up to Get Discounts'
    Third column: Calendar icon showing '30', heading 'Free & Easy Returns'
    
    Design requirements:
    
    Icons should be simple line drawings in dark navy blue
    All text in dark navy blue color
    Headings should be large, bold serif font, center-aligned
    Clean white background
    Equal spacing between columns
    Desktop: 3 columns side by side
    Mobile: Single column layout, stacked vertically with all three sections in one scrollable line
    
    Style: Modern, minimal, professional e-commerce aesthetic with ample whitespace", in mobile in should in same line, it shouldn't be scroolable to seee all benefits
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-benefits-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-benefits-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_spacing }}px;
    align-items: start;
  }

  .ai-benefits-column-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.column_padding }}px;
  }

  .ai-benefits-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_margin }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-benefits-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
    fill: none;
    stroke-width: {{ block.settings.icon_stroke_width }};
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-benefits-heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.2;
    text-align: center;
  }

  .ai-benefits-description-{{ ai_gen_id }} {
    font-family: {{ block.settings.description_font.family }}, {{ block.settings.description_font.fallback_families }};
    font-weight: {{ block.settings.description_font.weight }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: {{ block.settings.description_margin }}px 0 0;
    line-height: 1.4;
    text-align: center;
  }

  @media screen and (max-width: 768px) {
    .ai-benefits-section-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding }}px 10px;
    }

    .ai-benefits-container-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_spacing }}px;
      max-width: 100%;
    }

    .ai-benefits-column-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_column_padding }}px;
    }

    .ai-benefits-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
      margin: 0 auto {{ block.settings.mobile_icon_margin }}px;
    }

    .ai-benefits-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
      line-height: 1.1;
    }

    .ai-benefits-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_description_size }}px;
      margin: {{ block.settings.mobile_description_margin }}px 0 0;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-benefits-container-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_spacing | divided_by: 2 }}px;
    }

    .ai-benefits-column-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_column_padding | divided_by: 2 }}px;
    }

    .ai-benefits-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size | times: 0.8 }}px;
      height: {{ block.settings.mobile_icon_size | times: 0.8 }}px;
    }

    .ai-benefits-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-benefits-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-benefits-container-{{ ai_gen_id }}">
    <div class="ai-benefits-column-{{ ai_gen_id }}">
