{% doc %}
  @prompt
    generate me a Image with title for the collection page. both mobile and desktop version image size should be customizable and color to font to radius all should be customizable 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-image-title-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collection-image-title__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    overflow: hidden;
  }

  .ai-collection-image-title__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-collection-image-title__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collection-image-title__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-collection-image-title__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-collection-image-title__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
  }

  .ai-collection-image-title__content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: {{ block.settings.text_alignment }};
    width: 90%;
    max-width: 800px;
    z-index: 2;
  }

  .ai-collection-image-title__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-style: {{ block.settings.title_font.style }};
    font-size: {{ block.settings.desktop_title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-image-title__image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-collection-image-title__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-image-title-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-image-title__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | default: collection.title | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-collection-image-title__image-{{ ai_gen_id }}"
      >
    {% elsif collection.image %}
      <img
        src="{{ collection.image | image_url: width: 2000 }}"
        alt="{{ collection.image.alt | default: collection.title | escape }}"
        loading="lazy"
        width="{{ collection.image.width }}"
        height="{{ collection.image.height }}"
        class="ai-collection-image-title__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-collection-image-title__placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
        <div class="ai-collection-image-title__empty-state-{{ ai_gen_id }}">
          Next, add an image
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-collection-image-title__overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-collection-image-title__content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h1 class="ai-collection-image-title__title-{{ ai_gen_id }}">
          {{ block.settings.title }}
        </h1>
      {% elsif collection.title %}
        <h1 class="ai-collection-image-title__title-{{ ai_gen_id }}">
          {{ collection.title }}
        </h1>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection image title",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "If no image is selected, the collection's featured image will be used"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 500
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 150,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 300
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity",
      "default": 0.3
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "info": "If left blank, the collection title will be used"
    },
    {
      "type": "font_picker",
      "id": "title_font",
      "label": "Font",
      "default": "baskervville_n4"
    },
    {
      "type": "range",
      "id": "desktop_title_size",
      "min": 20,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Desktop font size",
      "default": 60
    },
    {
      "type": "range",
      "id": "mobile_title_size",
      "min": 16,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Mobile font size",
      "default": 32
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Collection image title"
    }
  ]
}
{% endschema %}
