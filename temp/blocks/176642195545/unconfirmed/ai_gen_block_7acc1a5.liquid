{% doc %}
  @prompt
    generate me a section for these with icons: Free and easy returns
    Delivery within 48 hours
    Export fabric. in mobile version the three should be in same one row , don't like the icons
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-features-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-features-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-features-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-features-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke-width: {{ block.settings.icon_stroke_width }};
  }

  .ai-features-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-features-container-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-features-item-{{ ai_gen_id }} {
      gap: {{ block.settings.icon_text_gap_mobile }}px;
    }

    .ai-features-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size_mobile }}px;
      height: {{ block.settings.icon_size_mobile }}px;
    }

    .ai-features-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-container-{{ ai_gen_id }}">
    <div class="ai-features-item-{{ ai_gen_id }}">
      <div class="ai-features-icon-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 11 12 14 22 4"></polyline>
          <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
        </svg>
      </div>
      <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_1_text }}</p>
    </div>

    <div class="ai-features-item-{{ ai_gen_id }}">
      <div class="ai-features-icon-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
      </div>
      <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_2_text }}</p>
    </div>

    <div class="ai-features-item-{{ ai_gen_id }}">
      <div class="ai-features-icon-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
          <line x1="7" y1="7" x2="7.01" y2="7"></line>
        </svg>
      </div>
      <p class="ai-features-text-{{ ai_gen_id }}">{{ block.settings.feature_3_text }}</p>
    </div>
  </div>
</div>

