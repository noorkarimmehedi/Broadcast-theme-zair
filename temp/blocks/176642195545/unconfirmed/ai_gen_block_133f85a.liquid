{% doc %}
  @prompt
    generate me a section for these with icons: Free and easy returns
    Delivery within 48 hours
    Export fabric. in mobile version the three should be in same one row , don't like the icons, option for custom icon upload and select icons from shopify. also add a black border , add border radius option , i want slight gap on both left and right side on mobile version
    
    , font should be customizable from Shopify also i need section top and bottom padding
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-container-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.mobile_gap }}px {{ block.settings.padding_bottom }}px;
  }

  .ai-features-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.gap }}px;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
  }

  .ai-feature-item-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-feature-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-feature-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
    fill: none;
  }

  .ai-feature-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    line-height: 1.3;
    word-break: break-word;
  }

  @media screen and (max-width: 749px) {
    .ai-features-wrapper-{{ ai_gen_id }} {
      flex-wrap: nowrap;
    }

    .ai-feature-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-feature-icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-features-container-{{ ai_gen_id }} {
      padding-left: 0;
      padding-right: 0;
    }
  }
{% endstyle %}

<div class="ai-features-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-wrapper-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign text_key = 'feature_' | append: i | append: '_text'
        assign icon_key = 'feature_' | append: i | append: '_icon'
        assign icon_type_key = 'feature_' | append: i | append: '_icon_type'
        assign shopify_icon_key = 'feature_' | append: i | append: '_shopify_icon'

        assign feature_text = block.settings[text_key]
        assign custom_icon = block.settings[icon_key]
        assign icon_type = block.settings[icon_type_key]
        assign shopify_icon = block.settings[shopify_icon_key]
      %}

      <div class="ai-feature-item-{{ ai_gen_id }}">
        <div class="ai-feature-icon-{{ ai_gen_id }}">
          {% if icon_type == 'custom' and custom_icon %}
            <img
              src="{{ custom_icon | image_url: width: 200 }}"
              alt="{{ feature_text | escape }}"
              loading="lazy"
              width="200"
              height="200"
            >
          {% elsif icon_type == 'shopify' %}
            {% case shopify_icon %}
              {% when 'truck' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M1 3h15v13H1z"></path>
                  <path d="M16 8h3l3 3v5h-6V8z"></path>
                  <circle cx="5.5" cy="18.5" r="2.5"></circle>
                  <circle cx="18.5" cy="18.5" r="2.5"></circle>
                </svg>
              {% when 'return' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 14 4 9 9 4"></polyline>
                  <path d="M20 20v-7a4 4 0 0 0-4-4H4"></path>
                </svg>
              {% when 'shield' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              {% when 'check' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
              {% when 'star' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              {% when 'package' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
                  <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                  <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                  <line x1="12" y1="22.08" x2="12" y2="12"></line>
                </svg>
              {% when 'heart' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
              {% when 'gift' %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 12 20 22 4 22 4 12"></polyline>
                  <rect x="2" y="7" width="20" height="5"></rect>
                  <line x1="12" y1="22" x2="12" y2="7"></line>
                  <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path>
                  <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
                </svg>
              {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
            {% endcase %}
          {% endif %}
        </div>
        {% if feature_text != blank %}
          <div class="ai-feature-text-{{ ai_gen_id }}">{{ feature_text }}</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

