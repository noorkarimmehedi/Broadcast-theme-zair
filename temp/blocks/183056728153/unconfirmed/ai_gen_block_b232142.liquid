{% doc %}
  @prompt
    i would likve to showcase a promotioan image create a section for this . all should be customizable from color to radius to image size to font
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-promo-image-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-promo-image-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-promo-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.image_background }};
  }

  .ai-promo-image-img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-promo-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-promo-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-promo-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-promo-image-content-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.content_vertical_position }}%;
    left: {{ block.settings.content_horizontal_position }}%;
    transform: translate(-50%, -50%);
    text-align: {{ block.settings.text_alignment }};
    width: {{ block.settings.content_width }}%;
    padding: {{ block.settings.content_padding }}px;
    background-color: {{ block.settings.content_background }};
    border-radius: {{ block.settings.content_border_radius }}px;
  }

  .ai-promo-image-heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-promo-image-subheading-{{ ai_gen_id }} {
    font-family: {{ block.settings.subheading_font.family }}, {{ block.settings.subheading_font.fallback_families }};
    font-weight: {{ block.settings.subheading_font.weight }};
    font-style: {{ block.settings.subheading_font.style }};
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px 0;
    line-height: 1.4;
  }

  .ai-promo-image-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
    font-weight: {{ block.settings.button_font.weight }};
    font-style: {{ block.settings.button_font.style }};
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-promo-image-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-promo-image-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 0;
    }

    .ai-promo-image-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-promo-image-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-promo-image-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }

    .ai-promo-image-content-{{ ai_gen_id }} {
      width: {{ block.settings.content_width | at_least: 90 }}%;
      padding: {{ block.settings.content_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-promo-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-promo-image-container-{{ ai_gen_id }}">
    <div class="ai-promo-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.promo_image %}
        <img
          src="{{ block.settings.promo_image | image_url: width: 2000 }}"
          alt="{{ block.settings.promo_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.promo_image.width }}"
          height="{{ block.settings.promo_image.height }}"
          class="ai-promo-image-img-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-promo-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-promo-image-empty-state-{{ ai_gen_id }}">
            Add a promotional image
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_content %}
        <div class="ai-promo-image-content-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-promo-image-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
          {% endif %}

          {% if block.settings.subheading != blank %}
            <div class="ai-promo-image-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
          {% endif %}

          {% if block.settings.button_text != blank %}
            <a
              href="{{ block.settings.button_link }}"
              class="ai-promo-image-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

